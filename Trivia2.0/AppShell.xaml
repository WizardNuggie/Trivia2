<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Trivia2._0.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Trivia2._0.Views"
    Shell.FlyoutBehavior="Disabled">
    <FlyoutItem
        FlyoutItemIsVisible="False"
        Title="Log In"
        Icon="login.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:Login}"
        Route="Log"/>
    </FlyoutItem>
    <FlyoutItem
        Title="Home"
        Icon="home">
        <ShellContent
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="Home"/>
    </FlyoutItem>
    <FlyoutItem
        Title="Score Board"
        Icon="highscore.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:BestScoresPage}"
        Route="Leaderboard"/>
    </FlyoutItem>
    <FlyoutItem
        Title="Questions"
        Icon="questions.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:UserQuestionsPage}"
        Route="Questions"/>
    </FlyoutItem>

</Shell>
